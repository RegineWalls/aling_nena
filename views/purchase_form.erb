<body>
    <div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Aling Nena's</a><!-- this is where you set the navigation title -->
        </div>
        <div class="collapse navbar-collapse"><!-- collapse allows for this navbar to be used in mobile devices -->
          <ul class="nav navbar-nav"><!-- this is the list of navigation options in your navbar -->
            <li class="active"><a href="/about">About</a></li>
            <li><a href="/products">Products</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
	
	<div class="container">
	  <div class="row">
	    <div class="col-md-4">
		  <h3><%= @product.new_record? ? "Create New Product" : "Purchasing #{@product.name}" %></h3>
		  <form role="form" method="POST" action="<%= @product.new_record? ? '/create_product' : "/product_purchase/#{@product.id}" %>">
		    <div class="form-group">
  			  <label for="item">Item:</label>
			  <input type="text" class="form-control" name="name" placeholder="<%= @product.name %>" readonly="true">
		    </div>
		    <div class="form-group">
              <label for="price">Price:</label>
			  <input type="number" class="form-control" name="price" placeholder="<%= @product.price %>" readonly="true">
			</div>
			<div class="form-group">
              <label for="qAvailable">Quantity Available:</label>
              <input type="number" class="form-control" name="qAvailable" placeholder="<%= @product.quantity %>" readonly="true">
            </div>
			<div class="form-group">
              <label for="quantity">Quantity:</label>
              <input type="number" class="form-control" name="quantity" placeholder="<%= @product.quantity %>">
            </div>
			<div class="form-group">
              <label for="denomination">Denominations to be used for the purchase:</label>
            </div>
			<div class="form-group">
              <label for="ones">₱1:</label>
              <input type="number" class="form-control" name="ones" placeholder="0">
            </div>
			<div class="form-group">
			  <label for="fives">₱5:</label>
              <input type="number" class="form-control" name="fives" placeholder="0">
            </div>
            <div class="form-group">
              <label for="tens">₱10:</label>
              <input type="text" class="form-control" name="tens" placeholder="0">
            </div>
			<div class="form-group">
			  <label for="twenties">₱20:</label>
              <input type="number" class="form-control" name="twenties" placeholder="0">
            </div>
            <div class="form-group">
			  <label for="fifties">₱50:</label>
              <input type="number" class="form-control" name="fifties" placeholder="0">
            </div>
			<div class="form-group">
			  <label for="hundreds">₱100:</label>
              <input type="number" class="form-control" name="hundreds" placeholder="0">
            </div>
            <div class="form-group">
			  <label for="five_hundreds">₱500:</label>
              <input type="number" class="form-control" name="five_hundreds" placeholder="0">
            </div>
			<div class="form-group">
			  <label for="thousands">₱1000:</label>
              <input type="number" class="form-control" name="thousands" placeholder="0">
            </div>
            <button type="submit" class="btn btn-default btn-primary"><%= @product.new_record? ? "Create New Product" : "Purchase" %></button>
		  </form>
		</div>
	  </div>
	</div>
